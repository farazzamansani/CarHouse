@using CarHouse.DataAccess
@{
    ViewData["Title"] = "Home Page";
}
@model List<CarModel>
<div class="text-center">
    <h1 class="display-4">Welcome to Car House</h1>
 
      @using (Html.BeginForm("AddCarView", "Home", FormMethod.Post))
    {
            <button class="btn btn-primary" name="myButton" id="myButton" >Add Car</button>
    }
    
        @foreach (var item in @Model)
        {
            <div>Make:@item.Make</div>
            <div>Model:@item.Model</div>
            <div>Price:@item.AdvertisedPrice</div>
            <div>KM:@item.OdometerKm</div>
            <div>Year:@item.Year</div>
            @using (Html.BeginForm("CarDetailsView", "Home",
               new { id = @item.CarId}, FormMethod.Post))
            {
                <button class="btn btn-primary" name="myButton" id="myButton" value=@item.CarId >Car Details</button>
            }
        }

</div>
