@using CarHouse.DataAccess

@{
    ViewData["Title"] = "Edit Car Details";
}
@model Car
<style>
    table {
        margin-left: auto;
        margin-right: auto;
    }
    h2 {
        margin-left: auto;
        margin-right: auto;
        text-align: center;
    }
    input {
        width: 100%;
    }
</style>
<h2>Update Details</h2>
@using (Html.BeginForm("EditCar", "Home",new {id = @Model.CarId},FormMethod.Post))
{
    <table>
        <tr>
            <td>Make: </td>
            <td><input type="text" name="make" placeholder="Make" required value="@Model.Make"/></td>
        </tr>
        <tr>
            <td>Model: </td>
            <td><input type="text" name="model" placeholder="Model" required value="@Model.Model"/></td>
        </tr>
        <tr>
            <td>Registration: </td>
            <td style="width: 500px;"><input type="text" name="registration" placeholder="Registration" required value="@Model.RegistrationNumber"/></td>
        </tr>
        <tr>
            <td>Year: </td>
            <td><input type="number" name="year" required value="@Model.Year" /></td>
        </tr>
        <tr>
            <td>Odometer (KM): </td>
            <td><input type="number" name="odometer" required value="@Model.OdometerKm"/></td>
        </tr>
        <tr>
            <td>Advertise Price: </td>
            <td><input type="number" name="advertisedPrice" step="0.05" required value="@Model.AdvertisedPrice"/></td>
        </tr>
        <tr>
            <td>Acquisition Date: </td>
            <td><input type="datetime-local" name="acquisitionDate" required value="@Model.AcquiredDate.ToString("s")"/></td>
        </tr>
        <tr>
            <td>Notes: </td>
            <td><input type="text" name="notes" value="@Model.Notes"/></td>
        </tr>
        <tr>
            <td colspan="2"><input type="submit" class="btn btn-primary" value="Update Car"/></td>
        </tr>
    </table>
}


